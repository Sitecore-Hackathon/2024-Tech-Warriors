<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense" xmlns:shell="http://www.sitecore.net/shell">
    <DowntimeNotification>
        <FormDialog Icon="Applications/32x32/window_view.png" Header="Downtime Notication" Text="Trigger Downtime Notification">
            <CodeBeside Type="DowntimeNotification.Dialogs.DowntimeNotificationForm,DowntimeNotification"/>
            <Scrollbox Class="scScrollbox" Width="100%" Height="100%">
                <div class="scInformation">
                    <Border runat="server"  Margin="8px 0px 8px 0px">
                        <Literal class="scMessageBarText" Text="Title for the notification message" />
                        <Edit id="Title" name="Title" />
                    </Border>
                    <Border runat="server"  Margin="8px 0px 8px 0px">
                        <Literal class="scMessageBarText" Text="Start time for the notification message:" />
                        <DatePicker id="StartTime" name="StartTime" Margin="0px 0px 0px 6px" />
                    </Border>
                    <Border runat="server" Margin="8px 0px 8px 0px">
                        <Literal class="scMessageBarText" Text="End time for the notification message: " />
                        <DatePicker id="EndTime" name="EndTime" Margin="0px 0px 0px 6px" />
                    </Border>
                </div>
            </Scrollbox>
        </FormDialog>
    </DowntimeNotification>
</control>
